<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Tiendas Oficiales'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- Ofertas -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Tiendas oficiales</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% tiendas.forEach(function(tiendax) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<figure class="product-box_image">
							<img src="/images/tiendas/<%= tiendax.image %>" alt="imagen">
						</figure>
					</section>
				</div>
			<% }) %>
		</div>
	</div>

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>